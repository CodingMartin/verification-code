<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.martingcheng.yzm.VerificationCodeView
        android:id="@+id/wx_code_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:cvc_outlookRadius="5dp"
        app:cvc_passwordStyle="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"
        app:vcv_cursorWidth="0dp"
        app:vcv_length="6"
        app:vcv_outlook="rect"
        app:vcv_outlookBackgroundColor="#ECE9E9"
        app:vcv_outlookStrokeWidth="0dp"
        app:vcv_perSpacing="20dp" />

    <com.martingcheng.yzm.VerificationCodeView
        android:id="@+id/codeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:cvc_outlookRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:vcv_cursorColor="#CACCD8"
        app:vcv_cursorWidth="2dp"
        app:vcv_length="5"
        app:vcv_outlook="rect"
        app:vcv_outlookStrokeActiveColor="#D3D0D0"
        app:vcv_outlookStrokeNormalColor="#EDEDED"
        app:vcv_outlookStrokeWidth="1dp"
        app:vcv_perSpacing="10dp" />

    <com.martingcheng.yzm.VerificationCodeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:vcv_cursorColor="#CACCD8"
        app:vcv_cursorWidth="2dp"
        app:vcv_length="4"
        app:vcv_outlook="line"
        app:vcv_outlookStrokeWidth="2dp"
        app:vcv_perSpacing="40dp" />


    <com.martingcheng.yzm.VerificationCodeView
        android:id="@+id/password_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:cvc_passwordStyle="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48"
        app:vcv_cursorColor="#CACCD8"
        app:vcv_cursorWidth="4dp"
        app:vcv_length="4"
        app:vcv_outlook="line"
        app:vcv_outlookStrokeWidth="2dp"
        app:vcv_perSpacing="40dp" />


</androidx.constraintlayout.widget.ConstraintLayout>